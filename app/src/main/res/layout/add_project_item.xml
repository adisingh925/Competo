<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/cvPoster"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/grid_1x"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_margin="@dimen/grid_1x"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar3"
                style="@style/Widget.MaterialComponents.AppBarLayout.Primary"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:backgroundTint="@color/white"
                android:elevation="@dimen/grid_1x"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:menu="@menu/add_project_menu">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="@dimen/grid_2x"
                        android:src="@drawable/ic_baseline_person_24"
                        app:civ_border_color="@color/ui_blue"
                        app:civ_border_width="1dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:id="@+id/profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/grid_2x"
                        android:layout_marginTop="@dimen/grid_1x"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:maxLines="2"
                        android:text="Dummy Name"
                        android:layout_gravity="top"
                        android:textColor="@color/text_gray"
                        app:layout_constraintBottom_toTopOf="@+id/profile_brief"
                        app:layout_constraintStart_toEndOf="@+id/profile_image"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/add_project_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="@dimen/grid_1x"
                        android:layout_marginBottom="@dimen/grid_2x"
                        android:fontFamily="sans-serif-condensed"
                        android:text="12:36 PM"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/profile_name"
                        app:layout_constraintStart_toEndOf="@id/profile_name"
                        app:layout_constraintBottom_toTopOf="@+id/profile_brief"/>

                    <TextView
                        android:id="@+id/profile_brief"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/grid_2x"
                        android:layout_marginTop="@dimen/grid_1x"
                        android:layout_marginBottom="@dimen/grid_1x"
                        android:fontFamily="sans-serif"
                        android:text="App dev"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/profile_image"
                        app:layout_constraintTop_toBottomOf="@+id/profile_name" />





                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.Toolbar>




        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/grid_2x"
            app:cardCornerRadius="10dp"
            app:cardElevation="@dimen/grid_2x">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@id/cvPoster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/background_default"
                    android:background="@color/dark_grey"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="@dimen/grid_2x"
                    android:layout_marginEnd="@dimen/grid_2x"
                    android:alpha="0.9"
                    android:elevation="@dimen/grid_1x"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_baseline_favorite_border_24"
                        android:backgroundTint="@color/white_ui"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/grid_2x"
                    android:alpha="0.9"
                    android:elevation="@dimen/grid_1x"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/grid_2x"
                        android:layout_marginStart="@dimen/grid_3x"
                        android:layout_marginBottom="@dimen/grid_2x"
                        android:backgroundTint="@color/ui_light_blue"
                        app:cornerRadius="5dp"
                        android:elevation="@dimen/grid_2x"
                        android:text="Contact"
                        android:fontFamily="@font/palanquin_semibold"
                        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
                        android:textAllCaps="false"
                        android:textColor="@color/white_ui" />


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


        <TextView
            android:gravity="left"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_1x"
            android:textSize="23dp"
            android:ellipsize="end"
            android:layout_marginStart="@dimen/grid_2x"
            android:fontFamily="sans-serif-condensed-medium"
            android:maxLines="2"
            android:text="Event Title"
            android:textColor="@color/text_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="This is a demo description"
            android:textColor="@color/text_dark_gray"
            android:textSize="12sp"
            android:layout_marginTop="@dimen/grid_1x"
            android:layout_marginStart="@dimen/grid_2x"
            android:layout_marginBottom="4dp"
            android:paddingBottom="@dimen/grid_1x"
            android:gravity="left"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/grid_2x"
            android:paddingStart="@dimen/grid_2x"
            android:paddingTop="@dimen/grid_2x"
            android:paddingEnd="@dimen/grid_2x"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/grid_2x"
            tools:listitem="@layout/interest_chip_item" />


    </LinearLayout>
</androidx.cardview.widget.CardView>

